{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">

    <div class="jumbotron text-center">
        <h2>Modifier les informations</h2>
    </div>
    <form>
        <fieldset>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email1" aria-describedby="emailHelp" placeholder="Exemple@mail.fr">
            </div>
            <div class="form-group">
                <label for="pseudo">Pseudo</label>
                <input type="pseudo" class="form-control" id="pseudo1" aria-describedby="pseudohelp" placeholder="Pseudo ...">
            </div>
            <div class="form-group">
                <label for="name">Nom</label>
                <input type="name" class="form-control" id="name1" aria-describedby="namehelp"placeholder="Nom ...">
            </div>
            <div class="form-group">
                <label for="prenom">Prénom</label>
                <input type="prenom" class="form-control" id="prenom1" aria-describedby="prenomhelp" placeholder="Prénom ...">
            </div>
            <div class="form-group">
                <label for="mdp">Mot de passe</label>
                <input type="mdp" class="form-control" id="mdp1" placeholder="Mot de passe ...">
            </div>
            <button type="submit" class="btn btn-success">Valider</button>
        </fieldset>
    </form>
    </div>

{% endblock %}